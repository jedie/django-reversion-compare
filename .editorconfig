# see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,js}]
insert_final_newline = false

[*.py]
max_line_length = 119

[{Makefile,**.mk}]
indent_style = tab
insert_final_newline = false

[{*.yaml,*.yml}]
indent_size = 2
